<Window x:Class="CubeRotator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CubeRotator"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">



    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"></ColumnDefinition>
                <ColumnDefinition Width="75"></ColumnDefinition>
                <ColumnDefinition Width="75"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"></RowDefinition>
                <RowDefinition Height="75"></RowDefinition>
                <RowDefinition Height="75"></RowDefinition>
            </Grid.RowDefinitions>

            <Button FontSize="20" Grid.Row="0" Grid.Column="1" Margin="5">W</Button>
            <Button FontSize="20" Grid.Row="1" Grid.Column="0" Margin="5">A</Button>
            <Button FontSize="20" Grid.Row="1" Grid.Column="2" Margin="5">S</Button>
            <Button FontSize="20" Grid.Row="2" Grid.Column="1" Margin="5">D</Button>
            
        </Grid>
    </StackPanel>
    
    
</Window>
